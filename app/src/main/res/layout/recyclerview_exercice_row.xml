<?xml version="1.0" encoding="utf-8"?>
<!-- recyclerview_rowxml -->
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/firstline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/exercice_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:fontFamily="sans-serif"
                    android:padding="@dimen/activity_vertical_margin"
                    android:textColor="@color/orthodarkgrey"
                    android:textSize="18sp"
                    tools:text="Nom de l'exercice" />


                <ImageButton
                    android:id="@+id/icon_favicon"
                    android:layout_width="40dip"
                    android:layout_height="45dip"
                    android:background="@android:color/transparent"
                    android:src="@drawable/favoriteicon" />

            </LinearLayout>


            <TextView
                android:id="@+id/exercice_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstline"
                android:background="?android:selectableItemBackground"
                android:fontFamily="sans-serif"
                android:padding="2dp"
                android:textColor="@color/orthomidgrey"
                android:textSize="12sp"
                tools:text="Objectif pédagogique" />


            <TextView
                android:id="@+id/exercice_nbofwords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/exercice_goal"
                android:background="?android:selectableItemBackground"
                android:fontFamily="sans-serif"
                android:padding="2dp"
                android:textColor="@color/orthomidgrey"
                android:textSize="12sp"
                tools:text="Nombre de mot(s) : " />

            <TextView
                android:id="@+id/exercice_creadate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/exercice_nbofwords"
                android:background="?android:selectableItemBackground"
                android:fontFamily="sans-serif"
                android:padding="2dp"
                android:textColor="@color/orthomidgrey"
                android:textSize="12sp"
                tools:text="Date de création : " />
        </RelativeLayout>
    </android.support.v7.widget.CardView>