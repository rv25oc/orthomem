<?xml version="1.0" encoding="utf-8"?>
<!-- activity_parameters.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.utilisateur.orthomem.controllers.fragments.ParametersFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/parameters_title"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parameters_title"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_myaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/orthobutton_disabled"
            android:enabled="false"
            android:text="@string/myaccount_label"
            android:textColor="@color/orthomidgrey"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_updpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/orthobutton_disabled"
            android:enabled="false"
            android:text="@string/updpassword_label"
            android:textColor="@color/orthomidgrey"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_preferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/orthobutton_disabled"
            android:enabled="false"
            android:text="@string/preferences_label"
            android:textColor="@color/orthomidgrey"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/orthobutton"
            android:text="@string/logout_label"
            android:textStyle="bold" />


    </LinearLayout>
</LinearLayout>